<section class="login py-16">
  <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <img class="mx-auto h-32 w-auto" src="/images/favicon.png" alt="Your Company">
      <h2 class="mt-10 text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account
      </h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <form class="space-y-6" action="/login" method="POST">
        <div>
          <label for="email" class="block text-xl font-medium leading-6 text-gray-900">Email address</label>
          <div class="mt-2">
            <input id="email" name="email" type="email" autofocus placeholder="Enter Your Email""
              required
              class=" block w-full text-xl p-3 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset
              ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm
              sm:leading-6">
          </div>
        </div>
        <div>
          <div class="flex items-center justify-between">
            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
            <div class="text-sm">
              <a href="/register"
                class="font-semibold text-orange-600 hover:text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">Don't
                have an account?</a>
            </div>
          </div>
          <div class="mt-2">
            <input id="password" name="password" placeholder="Enter Your Password" type="password"
              autocomplete="current-password" required
              class="block w-full text-xl p-3 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6">
          </div>
        </div>

        <div>
          <button type="submit"
            class="flex w-full justify-center rounded-xl text-xl p-3 btn-primary leading-6 text-white font-bold">Sign
            in</button>
        </div>
      </form>

      <p class="mt-10 text-center text-sm text-gray-500">
        &#169; 2022. All rights reserved.
        <a href="/about" class="font-bold leading-6 text-orange-600 hover:text-black">ShopEasy &raquo; </a>
      </p>
    </div>
  </div>

</section>
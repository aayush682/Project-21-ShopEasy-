<section class="hero bg-gray-100 py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-3xl font-normal text-gray-700 py-8">Get up to 50% off on selected sneakers</h6>
      <h1 class="text-5xl font-medium"><span class="font-light text-6xl">Sneaker's</span> specially
        designed for you!
      </h1>
      <button class="py-3 px-8 rounded-full text-white text-2xl font-bold mt-8 btn-primary"><a href="#menu">Order
          Now</a></button>
    </div>
    <div class="w-1/2">
      <img src="/images/shoes-bg1.jpg" class="ml-40" alt="">
    </div>
  </div>
</section>
<section class="menu container mx-auto py-16">
  <h1 class="text-4xl font-semibold mb-8" id="menu">All Sneakers</h1>
  <div class="grid grid-cols-4 col-gap-12 row-gap-16">
    <% shoes.forEach((shoes)=> { %>
      <div class="w-full">
        <img class="h-48 mb-4 mx-auto" src="/images/<%= shoes.image %>" alt="">
        <div class="text-center">
          <h2 class="mb-4 text-lg font-semibold">
            <%= shoes.name %>
          </h2>
          <span class="py-1 px-4 bg-gray-200 rounded-2xl uppercase">Size : <%= shoes.size %></span>
          <div class="flex items-center justify-around mt-6">
            <span class="font-bold text-lg">â‚¹ <%= shoes.price %></span>
            <button class="add-to-cart py-1 px-6 rounded-full bg-gray-200 flex items-center font-bold">
              <span>+</span>
              <span class="ml-4">Add</span>
            </button>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
</section>